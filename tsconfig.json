{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDirs": [
      "./src/core/src",
      "./src/infrastructure/storage/src",
      "./src/presenter/express/src"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/src/*"],
      "@infrastructure/storage/*": ["./src/infrastructure/storage/src/*"],
      "@presenter/express/*": ["./src/presenter/express/src/*"],
      "@presenter/graphql/*": ["./src/presenter/graphql/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
